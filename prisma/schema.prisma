generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  category   String
  description String?
  shortDescription String?
  status     String   @default("Active")
  specsJson  String   // JSON.stringify()
  imageUrl   String
  rentalPrice String?
  isFeatured Boolean  @default(false)
  isNew      Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  company   String?
  source    String   @default("contact_page")
  product   String?  // Product name or detail
  message   String
  status    String   @default("new")
  createdAt DateTime @default(now())
}

model Setting {
  key   String @id
  value String // JSON.stringify()
}
