generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  category    String
  specsJson   Json
  imageUrl    String
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  productId Int?
  message   String
  status    String   @default("PENDING") // PENDING, CONTACTED, CLOSED
  createdAt DateTime @default(now())
}

model Setting {
  key   String @id
  value Json
}
